@section scripts {
    <script>
        // If using Bootstrap 5, carousel will auto-init via data-bs-ride. Optionally adjust interval via JS API if needed.
        (function () {
            try {
                var el = document.getElementById('bannerCarousel');
                if (el) {
                    var carousel = bootstrap.Carousel.getOrCreateInstance(el, { interval: 5000, ride: 'carousel' });
                }
            } catch (e) { }
        })();
    </script>
