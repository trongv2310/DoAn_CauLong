    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <script>
        $(document).ready(function () {

            // 1. Tạo một hàm riêng để chuyển đổi nội dung menu
            function switchMegaMenuContent(activeElement) {
                // Lấy loại sản phẩm từ thuộc tính data-loai
                const loai = $(activeElement).data('loai');

                // Nếu mục này đã active rồi thì không cần làm gì thêm (tránh giật/lag)
                if ($(activeElement).hasClass('active')) {
                    return;
                }

                // Xóa class 'active' khỏi tất cả các mục danh mục và nội dung
                $('.main-cat').removeClass('active');
                $('.mega-content').removeClass('active');

                // Thêm class 'active' cho mục vừa di chuột vào và nội dung tương ứng
                $(activeElement).addClass('active');
                $(`.mega-content[data-loai="${loai}"]`).addClass('active');
            }

            // 2. Gán sự kiện hover cho menu items
            let hoverTimeout;

            $('.main-cat').on('mouseenter', function () {
                clearTimeout(hoverTimeout);
                // Gọi hàm chuyển nội dung ngay lập tức
                switchMegaMenuContent(this);
            });

            // 3. Xử lý khi chuột rời khỏi toàn bộ mega menu
            $('.mega-submenu').on('mouseleave', function () {
                // Đặt timeout để reset menu về trạng thái mặc định sau khi rời chuột
                hoverTimeout = setTimeout(function() {
                    $('.main-cat').removeClass('active');
                    $('.mega-content').removeClass('active');
                    // Hiển thị nội dung mặc định (GIÀY CẦU LÔNG)
                    $('.main-cat[data-loai="Giay"]').addClass('active');
                    $('.mega-content[data-loai="Giay"]').addClass('active');
                }, 300);
            });

            // 4. Đảm bảo khi chuột vào mega-submenu thì không reset
            $('.mega-submenu').on('mouseenter', function () {
                clearTimeout(hoverTimeout);
            });

            // 5. Thiết lập menu mặc định khi trang load
            $(document).ready(function() {
                // Đặt GIÀY CẦU LÔNG làm mặc định
                $('.main-cat[data-loai="Giay"]').addClass('active');
                $('.mega-content[data-loai="Giay"]').addClass('active');
            });

            // 3. (Ghi chú) Chúng ta đã XÓA trình xử lý sự kiện 'click' cũ.
            // Giờ đây, khi người dùng 'click' THẬT, trình duyệt sẽ tự động
            // điều hướng đến 'href' của thẻ <a> (ví dụ [cite: 23, 24, 25]),
            // đây chính là hành vi mong muốn.

            // --- CÁC JAVASCRIPT KHÁC GIỮ NGUYÊN ---

            // User dropdown
            $('.user-btn').click(function (e) {
                e.stopPropagation();
                $(this).siblings('.user-menu').toggleClass('show');
            });

            // Đóng dropdown khi click ra ngoài
            $(document).click(function () {
                $('.user-menu').removeClass('show'); [cite: 79]
            });

            // Update cart count
            function updateCartCount() {
                try {
                    $.get('@Url.Action("GetCartCount", "GioHang")')
                        .done(function (data) {
                            $('.cart-count').text(data); [cite: 81]
                        });
                } catch (e) { } [cite: 82]
            }
            // Tải số lượng giỏ hàng khi trang được tải
            updateCartCount();

        });
    </script>

    @RenderSection("scripts", required: false)
